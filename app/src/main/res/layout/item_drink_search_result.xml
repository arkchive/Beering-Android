<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_drink_search_result_cl"
    android:layout_width="156dp"
    android:layout_height="228dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="17dp"
    android:background="@color/background1">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_drink_search_result_img_cv"
        android:layout_width="156dp"
        android:layout_height="156dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_drink_search_result_img_iv"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/item_drink_search_result_heart_off_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/ic_heart_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <ImageView
                android:id="@+id/item_drink_search_result_heart_on_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/ic_heart_on"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>



    <TextView
        android:id="@+id/item_drink_search_result_title_kr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="필스너 우르켈"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_drink_search_result_img_cv" />




    <TextView
        android:id="@+id/item_drink_search_result_title_en_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilsner Urquell"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintStart_toStartOf="@id/item_drink_search_result_title_kr_tv"
        app:layout_constraintTop_toBottomOf="@id/item_drink_search_result_title_kr_tv" />

    <TextView
        android:id="@+id/item_drink_search_result_manufacture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilsner Urquell Brewery"
        android:textColor="@color/gray"
        android:textSize="7dp"
        app:layout_constraintStart_toStartOf="@id/item_drink_search_result_title_kr_tv"
        app:layout_constraintTop_toBottomOf="@id/item_drink_search_result_title_en_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>